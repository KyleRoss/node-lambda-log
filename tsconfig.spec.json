{
  "compilerOptions": {
    "types": ["jest", "node"],
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
    "target": "es2019",
    "module": "commonjs",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": false
  },
  "include": [
    "src/*.spec.ts"
  ]
}
